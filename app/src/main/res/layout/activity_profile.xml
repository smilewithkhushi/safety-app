<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".UserProfile">

    <TextView
        android:id="@+id/userdetailsheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/alata"
        android:text="User Details"
        android:textColor="@color/pink700"
        android:textSize="24sp" />

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/profileicon" />


            <TextView
                android:id="@+id/username"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/basic"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:handwritingBoundsOffsetRight="@dimen/material_emphasis_high_type"
                android:text="User Name" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/basic"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:handwritingBoundsOffsetRight="@dimen/material_emphasis_high_type"
                android:text="Gender" />


            <TextView
                android:id="@+id/dob"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/basic"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:handwritingBoundsOffsetRight="@dimen/material_emphasis_high_type"
                android:text="Date of Birth" />

            <TextView
                android:id="@+id/member1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/basic"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:handwritingBoundsOffsetRight="@dimen/material_emphasis_high_type"
                android:text="Family Member" />

            <TextView
                android:id="@+id/memberPhone1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/basic"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:handwritingBoundsOffsetRight="@dimen/material_emphasis_high_type"
                android:text="Member Contact Details" />

            <TextView
                android:id="@+id/member2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/basic"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:handwritingBoundsOffsetRight="@dimen/material_emphasis_high_type"
                android:text="Family Member" />

            <TextView
                android:id="@+id/memberPhone2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/basic"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:handwritingBoundsOffsetRight="@dimen/material_emphasis_high_type"
                android:text="Member Contact Details" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/editProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:backgroundTint="@color/pink700"
                android:fontFamily="@font/alata"
                android:text="Edit" />

            <Button
                android:id="@+id/saveProfile"
                android:layout_width="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/pink700"
                android:fontFamily="@font/alata"
                android:text="Save" />

        </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>