<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowUserProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/userdetailsheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="20dp"
                android:fontFamily="@font/alata"
                android:text="User Details"
                android:textColor="@color/pink900"
                android:textSize="24sp" />


            <ImageView
                android:id="@+id/userimage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/baseline_person_24" />


            <TextView
                android:id="@+id/username"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/alata"
                android:handwritingBoundsOffsetRight="@dimen/material_emphasis_high_type"
                android:padding="10dp"
                android:text="User Name"
                android:textSize="14sp" />



            <TextView
                android:id="@+id/phone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/alata"
                android:handwritingBoundsOffsetRight="@dimen/material_emphasis_high_type"
                android:padding="10dp"
                android:text="Phone Number"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:fontFamily="@font/alata"
                android:handwritingBoundsOffsetRight="@dimen/material_emphasis_high_type"
                android:padding="10dp"
                android:text="Email"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/dob"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/alata"
                android:handwritingBoundsOffsetRight="@dimen/material_emphasis_high_type"
                android:padding="10dp"
                android:text="Date of Birthr"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/alata"
                android:handwritingBoundsOffsetRight="@dimen/material_emphasis_high_type"
                android:padding="10dp"
                android:text="Gender"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/alata"
                android:handwritingBoundsOffsetRight="@dimen/material_emphasis_high_type"
                android:padding="10dp"
                android:text="Address"
                android:textSize="14sp" />

            <Button
                android:id="@+id/editProfile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/pink700"
                android:fontFamily="@font/alata"
                android:layout_margin="10dp"
                android:text="Edit your Profile" />



        </LinearLayout>

    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>